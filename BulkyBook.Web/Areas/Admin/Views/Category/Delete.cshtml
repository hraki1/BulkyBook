@model Category

<form method="post" style="margin-top:100px">
    <div class="border p-3">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control bg-light opacity-50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayNumber"></label>
            <input asp-for="DisplayNumber" disabled class="form-control bg-light opacity-50" />
            <span asp-validation-for="DisplayNumber" class="text-bg-danger"></span>
            <input type="hidden" asp-for="Id" />
        </div>
        <button type="submit" class="btn btn-danger" style="">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>