@model CoverType

<form method="post" style="margin-top:100px">
    <div class="border p-3">
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class=""></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control bg-light" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-success " style="">Create</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>
@section scripts{
    @{
        <partial name="_validationscriptspartial"></partial>
    }
}