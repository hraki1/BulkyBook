
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create Company
            </a>
        </div>
    </div>
    <br /><br />
    <table id="tblData"
           class="table table-striped dt-responsive nowrap table-striped mb-5 align-content-center table-hover"
           style="width: 100%">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>State</th>              
                <th>City</th>
                <th>Street Address</th>
                <th>Postal Code</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/Company.js"></script>
    
}