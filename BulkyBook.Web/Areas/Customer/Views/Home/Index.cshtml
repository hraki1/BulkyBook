@model IEnumerable<Product>

<div class="container-fluid">
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6 col-md-4 col-sm-6 col-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />

                        <div class="card-body">
                            <div class="pl-1">
                                <h6 class="card-title fw-bold text-primary">@product.Title</h6>
                                <p class="card-title text-info">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="mb-1">List Price : <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1 mb-0">
                                <p class="mb-0">As low as : <b>$@product.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-0">
                            <a asp-action="Details" class="btn btn-primary mt-0 form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>
</div>